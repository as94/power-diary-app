@model ReportSelectionViewModel

@{
    ViewData["Title"] = "High Granularity Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.HighGranularityReport != null)
{
    <div class="container mt-5">
        <h1 class="mb-4">High Granularity Report</h1>
        <p><b>Date:</b> @Model.SelectedDate.ToShortDateString()</p>
        @if (Model.HighGranularityReport.Rows.Length == 0)
        {
            <p>No rows</p>
        }
        else
        {
            <table class="table table-bordered">
                <thead class="thead-dark">
                <tr>
                    <th>Time</th>
                    <th>Message</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var entry in Model.HighGranularityReport.Rows)
                {
                    <tr>
                        <td>@entry.FormatedTime</td>
                        <td>@entry.Message</td>
                    </tr>
                }
                </tbody>
            </table>
        }
    </div>
}

@if (Model.LowGranularityReport != null)
{
    <div class="container mt-5">
        <h1 class="mb-4">Low Granularity Report</h1>
        <p><b>Date:</b> @Model.SelectedDate.ToShortDateString()</p>
        <table class="table table-bordered">
            <thead class="thead-dark">
            <tr>
                <th>Time</th>
                <th>Messages</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var entry in Model.LowGranularityReport.Rows)
            {
                <tr>
                    <td>@entry.FormatedTime</td>
                    <td>
                        <ul>
                            @foreach (var message in entry.Messages)
                            {
                                <li>@message</li>
                            }
                        </ul>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}

