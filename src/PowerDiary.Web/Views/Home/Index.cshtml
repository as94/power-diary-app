@model ReportSelectionViewModel

@{
    ViewData["Title"] = "Chat events report";
}

<style>
    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        width: 50%;
    }
</style>

<div class="container mt-5">
    <h1 class="mb-4">Select Report Criteria</h1>
    <form asp-action="GenerateReport" method="post" class="form-inline">
        <div class="form-group mr-3">
            <label asp-for="SelectedDate" class="mr-2">Date</label>
            <input asp-for="SelectedDate" class="form-control" type="date" required />
        </div>
        <div class="form-group mr-3">
            <label asp-for="SelectedOption" class="mr-2">Report Granularity</label>
            <select asp-for="SelectedOption" class="form-control" required>
                <option value="High">High</option>
                <option value="Low">Low</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Generate Report</button>
    </form>
</div>

